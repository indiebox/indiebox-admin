pkgname=$(basename $(pwd))
pkgver=0.1
pkgrel=1
pkgdesc="UBOS Network management tools (wan/lan on a switch)"
arch=('any')
url="http://ubos.net/"
developer=$url
maintainer=$url
license=('GPL')
depends=('ubos-networking' 'dnsmasq')
options=('!strip')

package() {
# Code
    for d in Networking Networking/NetConfigs; do
        mkdir -p -m755 ${pkgdir}/usr/lib/perl5/vendor_perl/UBOS/$d/
        for f in ${startdir}/vendor_perl/UBOS/$d/*.pm; do
            if [ -r "$f" ]; then
                install -m755 $f ${pkgdir}/usr/lib/perl5/vendor_perl/UBOS/$d/
            fi
        done
    done
}
