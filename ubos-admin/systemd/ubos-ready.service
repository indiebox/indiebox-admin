[Unit]
Description=ubos-ready configuration
Wants=network.target cronie.service httpd.service certbot.timer
After=ubos-admin.service httpd.service mysqld.service

[Service]
ExecStartPre=/usr/share/ubos-admin/bin/ubos-service-prestart ubos-ready
ExecStopPost=/usr/share/ubos-admin/bin/ubos-service-poststop ubos-ready

Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/share/ubos-admin/bin/ubos-ready-start
ExecStop=/usr/share/ubos-admin/bin/ubos-ready-stop

[Install]
WantedBy=multi-user.target
