pkgname=$(basename $(pwd))
pkgver=0.41
pkgrel=1
pkgdesc="UBOS Network management tools"
arch=('any')
url="http://ubos.net/"
developer=${url}
maintainer=${url}
license=('GPL')
depends=('ubos-admin' 'avahi' 'iptables' 'perl-net-ip' 'nss-mdns')
options=('!strip')
_vendor_perl=$(perl -V::vendorarch: | sed -e "s![' ]!!g")

package() {
# Avahi
    install -D -m 644 ${startdir}/avahi/{http,https}.service -t ${pkgdir}/etc/avahi/services/

# Code
    for d in Commands HostnameCallbacks Networking Networking/NetConfigs; do
        for f in ${startdir}/vendor_perl/UBOS/${d}/*.pm; do
            if [ -r "$f" ]; then
                install -D -m755 ${f} -t ${pkgdir}${_vendor_perl}/UBOS/${d}/
            fi
        done
    done
    
# Systemd
    install -D -m 644 ${startdir}/systemd/avahi-daemon.service -t ${pkgdir}/etc/systemd/system/
}
