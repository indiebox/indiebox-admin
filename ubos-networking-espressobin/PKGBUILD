pkgname=$(basename $(pwd))
pkgver=0.15
pkgrel=1
pkgdesc="UBOS Network management tools (EspressoBIN)"
arch=('aarch64')
url="http://ubos.net/"
developer=${url}
maintainer=${url}
license=('AGPL3')
depends=('ubos-networking-gateway')
options=('!strip')
_vendor_perl=$(perl -V::vendorarch: | sed -e "s![' ]!!g")

package() {
# Code
    for d in Networking/NetConfigs; do
        for f in ${startdir}/vendor_perl/UBOS/${d}/*.pm; do
            if [ -r "$f" ]; then
                install -D -m755 ${f} -t ${pkgdir}${_vendor_perl}/UBOS/${d}/
            fi
        done
    done
}
