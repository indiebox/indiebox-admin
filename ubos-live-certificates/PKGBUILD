developer=http://indiecomputing.com/
url=${developer}
maintainer=${developer}
pkgname=$(basename $(pwd))
pkgver=0.3
pkgrel=1
pkgdesc="Certificates for UBOS Live"
arch=('any')
license=("proprietary")
options=('!strip')

# Be explicit so we don't miss one
_crts=(
    's1-ca.live.ubos.net.crt'
    's2-ca.live.ubos.net.crt'
)
package() {
    mkdir -p -m755 ${pkgdir}/etc/${pkgname}

    touch ${pkgdir}/etc/${pkgname}/s-cas.live.ubos.net.crt
    for c in ${_crts[*]}; do
        install -m0644 ${startdir}/crts/$c -t ${pkgdir}/etc/${pkgname}/
        cat ${startdir}/crts/$c >> ${pkgdir}/etc/${pkgname}/s-cas.live.ubos.net.crt
    done
    chmod 0644 ${pkgdir}/etc/${pkgname}/s-cas.live.ubos.net.crt
}
