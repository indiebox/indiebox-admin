## arg 1: the old package version
pre_remove() {
    cat <<MSG;

Hey hacker,

Sorry to see you go.
Hope to see you again in the future.

Regards,
    Indie Computing   indiecomputing.com
    UBOS              ubos.net

MSG
}

##
pre_install() {
    ensureChattr
}

post_install() {
    systemd-sysusers

    perl -MUBOS::Host -e 'UBOS::Host::ensureSnapperConfig();'
}

## arg 1: the new package version
## arg 2: the old package version
post_upgrade() {
    systemd-sysusers

    ensureChattr

    # Make Java 9 the default
    if [ -e /usr/lib/jvm/default ]; then
        rm /usr/lib/jvm/default
    fi
    if [ -e /usr/lib/jvm/default-runtime ]; then
        rm /usr/lib/jvm/default-runtime
    fi
    if [ ! -d /usr/lib/jvm ]; then
	    mkdir -m755 /usr/lib/jvm
	fi
    ln -sf java-9-openjdk /usr/lib/jvm/default
    ln -sf java-9-openjdk /usr/lib/jvm/default-runtime

    systemctl daemon-reload

    perl -MUBOS::Host -e 'UBOS::Host::ensureSnapperConfig();'

    systemctl enable ubos-ready.service snapper-timeline.timer snapper-cleanup.timer
    systemctl start ubos-ready.service  snapper-timeline.timer snapper-cleanup.timer

    # fix old device classes -- works for both rpi and rpi2
    perl -pi -e 's/UBOS_DEVICECLASS="raspberry-pi/UBOS_DEVICECLASS="rpi/' /etc/os-release

    if [ -x /usr/share/ubos-admin/bin/post-upgrade ]; then /usr/share/ubos-admin/bin/post-upgrade; fi
}

pre_upgrade() {
    # Fix directory permissions to avoid warning from pacman
    [ -d /var/lib/ubos/appconfigpars ] && chmod 755 /var/lib/ubos/appconfigpars
}

ensureChattr() {
    # set btrfs nocow attributes for databases
    ( [ -d /var/lib/mysql      ] || mkdir /var/lib/mysql      ) && chmod 700 /var/lib/mysql      && chattr +C /var/lib/mysql
    ( [ -d /var/lib/postgresql ] || mkdir /var/lib/postgresql ) && chmod 700 /var/lib/postgresql && chattr +C /var/lib/postgresql
    ( [ -d /var/log/journal    ] || mkdir /var/log/journal    ) && chattr +C /var/log/journal
}
