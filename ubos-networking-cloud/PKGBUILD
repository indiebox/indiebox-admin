pkgname=$(basename $(pwd))
pkgver=0.12
pkgrel=1
pkgdesc="UBOS Network management tools (cloud)"
arch=('any')
url="http://ubos.net/"
developer=${url}
maintainer=${url}
license=('GPL')
depends=('ubos-networking' 'cloud-init')
options=('!strip')
_vendor_perl=$(perl -V::vendorarch: | sed -e "s![' ]!!g")

package() {
# Code
    for d in Networking Networking/NetConfigs; do
        for f in ${startdir}/vendor_perl/UBOS/${d}/*.pm; do
            if [ -r "$f" ]; then
                install -D -m755 ${f} -t ${pkgdir}${_vendor_perl}/UBOS/${d}/
            fi
        done
    done
}
